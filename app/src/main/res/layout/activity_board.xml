<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Board">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/btn_re_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back_arrow"
            android:paddingVertical="20dp"
            android:paddingStart="10dp">
        </ImageView>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취업"
            android:textAppearance="@style/TextAppearance.GDSC_2324.Head"
            android:gravity="center"
            android:layout_gravity="center">
        </TextView>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="[SK] 장애 근로자 채용"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="65dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/prof"
        tools:layout_editor_absoluteY="88dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작성자 : "
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="88dp" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="110dp"
        android:layout_height="36dp"
        android:ems="10"
        android:inputType="text"
        android:text="SK매직"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="84dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024/01/12 2:30"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="120dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="374dp"
        android:layout_height="81dp"
        android:text="SK 매직에서 장애 근로자를 채용합니다
        SK 매직과 일할 근로자 분은 아래의 지원서를 작성해주시기 바랍니다.  https://skmagic.com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="153dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="343dp"
        android:layout_height="132dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/sk_image"
        tools:layout_editor_absoluteY="219dp" />

    <LinearLayout
        android:layout_width="416dp"
        android:layout_height="44dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="387dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/icon_like" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/icon_chat_bubble" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/replyre"
        android:layout_width="416dp"
        android:layout_height="270dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="397dp" />

    <ImageView
        android:id="@+id/btn_reply"
        android:layout_width="393dp"
        android:layout_height="49dp"
        app:srcCompat="@drawable/icon_reaply_rec"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="675dp" />

    <ImageView
        android:id="@+id/sendimg"
        android:layout_width="28dp"
        android:layout_height="30dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/icon_send"
        tools:layout_editor_absoluteX="365dp" />

    <TextView
        android:id="@+id/inputre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="댓글을 입력하세요"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="116dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:buttonTint="#F44336"
        android:text="익명/소속"
        android:textColor="#F44336"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="675dp" />

    <!--이메일-->

</androidx.constraintlayout.widget.ConstraintLayout>