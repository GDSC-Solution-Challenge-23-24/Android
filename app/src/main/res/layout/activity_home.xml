<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.HomeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent"
        android:paddingVertical="20dp">

        <ImageView
            android:id="@+id/img_title"
            android:layout_width="133dp"
            android:layout_height="40dp"
            android:src="@drawable/img_app_name_512w"
            android:layout_gravity="start">
        </ImageView>

        <TextView
            android:id="@+id/btn_notification"
            android:layout_width="83dp"
            android:layout_height="33dp"
            android:background="@drawable/style_home_point"
            android:drawableStart="@drawable/icon_point"
            android:paddingHorizontal="10dp"
            android:text="300P"
            android:textStyle="bold"
            android:textColor="#474746"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_gravity="end">
        </TextView>

        <TextView
            android:id="@+id/img_notification"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_notification_512px"
            android:backgroundTint="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end">
        </TextView>

    </androidx.appcompat.widget.Toolbar>

    <HorizontalScrollView
        android:id="@+id/hsv_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_marginHorizontal="20dp"
        android:scrollbars="none">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="20dp">
                <ImageView
                    android:id="@+id/img_all"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_all_512px"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_hsv_all"
                    android:textAppearance="@style/TextAppearance.GDSC_2324.Subtitle01"
                    android:layout_gravity="center"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_job"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_job_opportunities_512px"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_hsv_job"
                    android:textAppearance="@style/TextAppearance.GDSC_2324.Subtitle01"
                    android:layout_gravity="center"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_institution"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_institution_512px"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_hsv_institution"
                    android:textAppearance="@style/TextAppearance.GDSC_2324.Subtitle01"
                    android:layout_gravity="center"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_info"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_information_512px"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_hsv_info"
                    android:textAppearance="@style/TextAppearance.GDSC_2324.Subtitle01"
                    android:layout_gravity="center"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_free"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_free_512px"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_hsv_free"
                    android:textAppearance="@style/TextAppearance.GDSC_2324.Subtitle01"
                    android:layout_gravity="center"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_deals"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_deals_512px"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_hsv_deals"
                    android:textAppearance="@style/TextAppearance.GDSC_2324.Subtitle01"
                    android:layout_gravity="center"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_promotion"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_promotion_512px"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_hsv_promotion"
                    android:textAppearance="@style/TextAppearance.GDSC_2324.Subtitle01"
                    android:layout_gravity="center"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_question"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_question_512px"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_hsv_question"
                    android:textAppearance="@style/TextAppearance.GDSC_2324.Subtitle01"
                    android:layout_gravity="center"/>

            </androidx.appcompat.widget.LinearLayoutCompat>



        </androidx.appcompat.widget.LinearLayoutCompat>

    </HorizontalScrollView>


    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hsv_category"
        app:layout_constraintBottom_toTopOf="@id/bnv_home">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_realtime_popularity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/home_tv_realtime_popularity"
                android:textAppearance="@style/TextAppearance.GDSC_2324.Head"/>
            <ImageView
                android:id="@+id/img_popular_more"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/tv_realtime_popularity"
                app:layout_constraintBottom_toBottomOf="@id/tv_realtime_popularity"
                app:layout_constraintStart_toEndOf="@+id/tv_realtime_popularity"
                android:layout_marginStart="5dp"
                android:src="@drawable/icon_arrow_right"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_popularPosts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_realtime_popularity"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="25dp"/>

            <TextView
                android:id="@+id/tv_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_popularPosts"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/home_tv_job_notice"
                android:textAppearance="@style/TextAppearance.GDSC_2324.Head"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_job"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_job"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="25dp"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnv_home"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="5dp"
        app:itemActiveIndicatorStyle="@style/Widget.GDSC_2324_BottomNavigationView.ActiveIndicator"
        android:background="@drawable/style_home_bnv"
        app:itemIconTint="@color/main_org"
        app:itemIconSize="30dp"
        app:itemPaddingBottom="15dp"
        app:itemPaddingTop="15dp"
        app:itemTextColor="@color/gray_GR2"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_home_bnv" />



</androidx.constraintlayout.widget.ConstraintLayout>