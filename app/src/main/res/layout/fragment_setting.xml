<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/main_org">
        <ImageView
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_search"
            android:paddingVertical="20dp">
        </ImageView>

        <!--
        <ImageView
            android:id="@+id/txt_title"
            android:layout_width="91dp"
            android:layout_height="28dp"
            android:src="@drawable/img_main_page_title"
            android:layout_gravity="center">
        </ImageView>-->

        <TextView
            android:id="@+id/btn_notification"
            android:layout_width="83dp"
            android:layout_height="33dp"
            android:background="@drawable/style_home_point"
            android:drawableStart="@drawable/icon_point"
            android:paddingHorizontal="5dp"
            android:text="300P"
            android:textStyle="bold"
            android:textColor="#474746"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_gravity="end">
        </TextView>
    </androidx.appcompat.widget.Toolbar>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bnv_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:layout="@layout/fragment_home" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnv_home"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/style_home_bnv"
        android:elevation="0dp"
        android:paddingHorizontal="15dp"
        app:itemActiveIndicatorStyle="@style/Widget.GDSC_2324_BottomNavigationView.ActiveIndicator"
        app:itemIconSize="30dp"
        app:itemPaddingBottom="10dp"
        app:itemPaddingTop="6dp"
        app:itemRippleColor="@null"
        app:itemTextAppearanceActive="@style/TextAppearance.GDSC_2324.BnvItemActive"
        app:itemTextAppearanceInactive="@style/TextAppearance.GDSC_2324.BnvItemInactive"
        app:itemTextColor="@drawable/sel_main_color_bnv_label"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_home" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="125dp"
        android:layout_height="37dp"
        android:layout_marginTop="36dp"
        android:text="이름 / 소속"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.248"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="이메일"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="71dp" />

    <LinearLayout
        android:layout_width="416dp"
        android:layout_height="460dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bnv_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="소속설정"
            android:textSize="24sp"
            android:layout_marginBottom="8dp" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이름 변경"
            android:textSize="24sp"
            android:layout_marginBottom="8dp" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호 변경"
            android:textSize="24sp"
            android:layout_marginBottom="8dp" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내가 작성한 글 보기"
            android:textSize="24sp"
            android:layout_marginBottom="8dp" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="로그아웃"
            android:textSize="24sp"
            android:layout_marginBottom="8dp" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원탈퇴"
            android:textSize="24sp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>