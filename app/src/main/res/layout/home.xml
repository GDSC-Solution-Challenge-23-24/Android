<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/main_org"
        android:paddingVertical="20dp">

        <!--
        <ImageView
            android:id="@+id/txt_title"
            android:layout_width="91dp"
            android:layout_height="28dp"
            android:src="@drawable/img_main_page_title"
            android:layout_gravity="center">
        </ImageView>-->

        <TextView
            android:id="@+id/btn_notification"
            android:layout_width="83dp"
            android:layout_height="33dp"
            android:background="@drawable/style_home_point"
            android:drawableStart="@drawable/icon_point"
            android:paddingHorizontal="5dp"
            android:text="300P"
            android:textStyle="bold"
            android:textColor="#474746"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_gravity="end">
        </TextView>
    </androidx.appcompat.widget.Toolbar>

    <androidx.fragment.app.FragmentContainerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bnv_home"
        tools:layout="@layout/fragment_home" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnv_home"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/style_home_bnv"
        android:paddingHorizontal="5dp"
        app:itemActiveIndicatorStyle="@style/Widget.GDSC_2324_BottomNavigationView.ActiveIndicator"
        app:itemIconSize="30dp"
        app:itemPaddingBottom="15dp"
        app:itemPaddingTop="15dp"
        app:itemRippleColor="@null"
        app:itemIconTint="@drawable/sel_main_color_bnv_label"
        app:itemTextColor="@drawable/sel_main_color_bnv_label"
        app:labelVisibilityMode="labeled"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_home" />


</androidx.constraintlayout.widget.ConstraintLayout>
