<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.GDSC_2324" parent="">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/main_org</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Bottom Navigation View Custom TextAppearances. -->
    <style name="TextAppearance.GDSC_2324.BnvItemActive">
        <item name="fontFamily">@font/font_pretendard_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="lineHeight">12sp</item>
        <item name="android:textColor">#673AB7</item>
    </style>

    <style name="TextAppearance.GDSC_2324.BnvItemInactive">
        <item name="fontFamily">@font/font_pretendard_medium</item>
        <item name="android:textSize">10sp</item>
        <item name="lineHeight">12sp</item>
        <item name="android:textColor">#030303</item>
    </style>

    <!--title-->
    <style name="TextAppearance.GDSC_2324.Title">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">#FFBB00</item>
    </style>

    <style name="TextAppearance.GDSC_2324.Head">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.GDSC_2324.Head02">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.GDSC_2324.Subtitle01">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.GDSC_2324.Subtitle02">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.GDSC_2324.SubError">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="CustomRadioGroup" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">@color/main_org</item>
        <item name="colorControlNormal">@color/gray_GR2</item>
    </style>


</resources>